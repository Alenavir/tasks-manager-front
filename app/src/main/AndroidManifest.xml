<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TasksApp"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Главная активность -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Экран входа -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"/>

        <!-- Экран регистрации -->
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="true"/>

        <!-- Экран задачи -->
        <activity
            android:name=".ui.tasks.TaskActivity"
            android:exported="true"/>

        <!-- Экран добавления категорий -->
        <activity
            android:name=".ui.category.AddCategoryActivity"
            android:theme="@style/TransparentDialogTheme"/>

        <!-- Экран добавления задач -->
        <activity
            android:name=".ui.task.AddTaskActivity"
            android:theme="@style/TransparentDialogTheme"/>


        <!-- Экран редактирования задач -->
        <activity
            android:name=".ui.task.UpdateTaskActivity"
            android:theme="@style/TransparentDialogTheme"/>

        <!-- Экран редактирования категорий -->
        <activity
            android:name=".ui.category.UpdateCategoryActivity"
            android:theme="@style/TransparentDialogTheme"/>

        <!-- Экран календарь  -->
        <activity
            android:name=".ui.calendar.CalendarActivity"
            android:exported="true"/>

        <!-- Экран профиля  -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="true"/>

        <!-- Экран настройки  -->
        <activity
            android:name=".ui.setting.SetActivity"
            android:exported="true"/>

    </application>


</manifest>