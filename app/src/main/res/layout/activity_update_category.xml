<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <!-- ВСПЛЫВАЮЩЕЕ ОКНО -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:background="@color/colorSurfaceDark"
        android:padding="20dp"
        android:layout_gravity="center">

        <!-- Верхний горизонтальный лейаут: заголовок + иконка -->
        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvNewCategoryTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Обновление категории"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/tvChooseColor"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_color"
                android:contentDescription="Выбор цвета"
                android:padding="4dp"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/priority_box_stroke_color"
            app:boxBackgroundColor="@color/colorSurfaceDark"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#a3a3a3"
                android:textColorHint="@color/priority_box_stroke_color"
                android:hint="Название"/> <!-- hint теперь только внутри поля -->
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка создать -->
        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layoutCategoryName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/buttonCreateCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Обновить"
                android:textColor="@color/colorBackgroundDark"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Отменить"
                android:textColor="@color/colorBackgroundDark"
                android:backgroundTint="@color/colorSurfaceLight"
                android:layout_marginStart="8dp"
                app:strokeColor="@color/colorTextPrimary"
                app:strokeWidth="0.5dp"/>

        </LinearLayout>

        <!-- Добавляем после LinearLayout с кнопками Создать/Отменить -->
        <Button
            android:id="@+id/buttonDeleteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:textColor="@android:color/holo_red_dark"
            android:background="@android:color/transparent"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/buttonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
