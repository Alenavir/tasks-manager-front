<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark"
    android:fitsSystemWindows="true">


    <!-- Заголовок экрана -->
    <TextView
        android:id="@+id/textProfileHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ПРОФИЛЬ"
        android:textColor="@color/colorTextPrimary"
        android:textStyle="bold"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Заголовок блока профиля -->
    <TextView
        android:id="@+id/textNicknameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Никнейм"
        android:textColor="#AAAAAA"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/textProfileHeader"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Поле ввода Никнейма -->
    <EditText
        android:id="@+id/editTextNickname"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Введите никнейм"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textNicknameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Кнопка сохранить -->
    <Button
        android:id="@+id/buttonSaveNickname"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="@color/colorBackgroundDark"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Заголовок "Обзор задач на месяц" -->
    <TextView
        android:id="@+id/textMonthlyOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Обзор задач на месяц"
        android:textColor="#AAAAAA"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSaveNickname"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Контейнер с карточками -->
    <LinearLayout
        android:id="@+id/layoutStatsContainer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/textMonthlyOverview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Карточка -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_edit_text"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textCompletedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выполнено"
                android:textColor="#CCCCCC"
                android:textSize="14sp"/>
        </LinearLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent"/>

        <!-- Карточка -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_edit_text"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textUncompletedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FF5252"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Не выполнено"
                android:textColor="#CCCCCC"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Подпись под карточками -->
    <TextView
        android:id="@+id/textStatsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сводная статистика по всем категориям"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutStatsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Диаграмма -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartCategories"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textStatsDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,16:9"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1e1e1e"
        app:itemIconTint="@color/touch_icon_color"
        app:itemTextColor="@color/touch_text_color"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
