<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark">

    <!-- Горизонтальный скролл категорий -->
    <!-- Горизонтальный скролл категорий -->
    <include
        android:id="@+id/include_categories"
        layout="@layout/activity_category"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Кнопка "Отсортировать" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSortTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отсортировать"
        android:textSize="12sp"
        android:textColor="@color/colorTextPrimary"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="1dp"
        android:layout_marginStart="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/include_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:icon="@drawable/ic_sort"
        app:iconGravity="textEnd"
        app:iconPadding="25dp"/>


    <!-- Список задач -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollTasks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/buttonSortTasks"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutTasksContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- НЕВЫПОЛНЕННЫЕ задачи -->
            <LinearLayout
                android:id="@+id/layoutTasksPending"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!-- ВЫПОЛНЕННЫЕ задачи -->
            <LinearLayout
                android:id="@+id/layoutTasksDone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button для добавления -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1e1e1e"
        app:itemIconTint="@color/touch_icon_color"
        app:itemTextColor="@color/touch_text_color"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
