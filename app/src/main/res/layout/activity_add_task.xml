<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <!-- ВСПЛЫВАЮЩЕЕ ОКНО -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:background="@color/colorSurfaceDark">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Новая задача"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Поле: Название -->
        <!-- Поле: Название -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/priority_box_stroke_color"
            app:boxBackgroundColor="@color/colorSurfaceDark"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:hintEnabled="false"> <!-- Отключаем плавающий hint -->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название"
                android:textColor="#a3a3a3"
                android:textColorHint="@color/priority_box_stroke_color"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Поле: Описание -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTaskDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/priority_box_stroke_color"
            app:boxBackgroundColor="@color/colorSurfaceDark"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/filledName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="center_vertical"
                android:hint="Описание"
                android:textColor="#a3a3a3"
                android:textColorHint="@color/priority_box_stroke_color"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Категория (Material Spinner) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTaskCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/priority_box_stroke_color"
            app:boxBackgroundColor="@color/colorSurfaceDark"
            app:endIconMode="dropdown_menu"
            app:layout_constraintTop_toBottomOf="@id/layoutTaskDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spinnerTaskCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="#a3a3a3"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Приоритет (Material Spinner) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/priority_box_stroke_color"
            app:boxBackgroundColor="@color/colorSurfaceDark"
            app:endIconMode="dropdown_menu"
            app:layout_constraintTop_toBottomOf="@id/layoutTaskCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spinnerPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#a3a3a3"
                android:textColorHint="@color/priority_box_stroke_color"
                android:inputType="none"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Горизонтальный Layout для кнопок -->
        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layoutPriority"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/buttonCreateCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Создать"
                android:textColor="@color/colorBackgroundDark"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Отменить"
                android:textColor="@color/colorBackgroundDark"
                android:backgroundTint="@color/colorSurfaceLight"
                android:layout_marginStart="8dp"
                app:strokeColor="@color/colorTextPrimary"
                app:strokeWidth="0.5dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
