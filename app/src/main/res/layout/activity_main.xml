<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:padding="16dp">

    <!-- Вертикальная линия посередине экрана -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31" />

    <!-- Логотип -->
    <ru.alenavir.tasks.ui.main.AnimatedLogoView
        android:id="@+id/imageLogo"
        android:layout_width="134dp"
        android:layout_height="108dp"
        android:layout_marginTop="268dp"
        android:src="@drawable/ic_ts"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:id="@+id/buttonsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Кнопка Войти -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Войти"
            android:textColor="@color/colorBackgroundDark"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/colorTextPrimary"
            android:layout_marginEnd="8dp"/>

        <!-- Кнопка Регистрация -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Регистрация"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:strokeColor="@color/colorTextPrimary"
            app:strokeWidth="2dp"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
